        <TextBlock HorizontalAlignment="Left" Height="63" Margin="317,168,0,0" Text="It is time to add doctors to our company!" FontSize="34" TextWrapping="Wrap" VerticalAlignment="Top" Width="622"/>

    </Grid>
</UserControl>
